<% include ./partials/header-cms%>
  <div class="ui main text container segment">
    <div class="ui huge header">Edit <%= project.title %></div>
    <form class="ui form" action="/portfolio/<%= project._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="project[title]" value="<%= project.title %>">
      </div>
      <div class="field">
        <label>Front Image Link</label>
        <input type="text" name="project[image.front]" value="<%= project.image.front %>">
      </div>
      <div class="field">
        <label>Back Image Link</label>
        <input type="text" name="project[image.back]" value="<%= project.image.back %>">
      </div>
      <div class="field">
        <label>Description</label>
        <textarea required name="project[body]"><%= project.body %></textarea>
      </div>
      <div class="field">
        <label>Technologies</label>
        <textarea name="project[technologies]"rows="2"><%= project.technologies %></textarea>
      </div>
      <div class="field">
        <label>URL</label>
        <input type="text" name="project[url]" value="<%= project.url %>">
      </div>
      <div class="field">
        <label>Github URL</label>
        <input type="text" name="project[githubURL]" value="<%= project.githubURL %>">
      </div>
      <button class="ui button" type="submit">Update</button>
    </form>
  </div>
  <% include ./partials/footer-cms%>